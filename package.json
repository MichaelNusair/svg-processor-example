{
  "name": "@svg-processor/monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:frontend": "nx serve frontend",
    "dev:backend": "nx serve backend",
    "build": "nx run-many -t build",
    "lint": "nx run-many -t lint",
    "lint:fix": "nx run-many -t lint:fix",
    "test": "nx run-many -t test",
    "test:coverage": "nx run-many -t test -- --coverage",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md,html,svg}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md,html,svg}\"",
    "start:fullapp": "nx run-many -t serve",
    "start:mongo": "docker-compose -f docker-compose.dev.yml up -d",
    "stop:mongo": "docker-compose -f docker-compose.dev.yml down",
    "start:all": "pnpm start:mongo && sleep 2 && pnpm start:fullapp",
    "start": "pnpm start:all",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "seed": "tsx scripts/seed.ts",
    "seed:clear": "tsx scripts/seed.ts --clear",
    "clean": "nx reset && rm -rf node_modules apps/*/node_modules libs/*/node_modules",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nx": "^20.0.0",
    "prettier": "^3.7.4",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md,html,svg}": [
      "prettier --write"
    ]
  }
}
